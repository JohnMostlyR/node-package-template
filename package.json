{
  "name": "node-package-template",
  "version": "1.3.1",
  "description": "Template for creating a Node.js package.",
  "keywords": [
    "template",
    "node",
    "typescript",
    "unbuild",
    "vitest",
    "eslint",
    "prettier"
  ],
  "homepage": "https://github.com/JohnMostlyR/node-package-template",
  "bugs": {
    "url": "https://github.com/JohnMostlyR/node-package-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnMostlyR/node-package-template.git"
  },
  "license": "MIT",
  "author": "Johan Meester",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "clean": "git clean -xdf .cache dist node_modules",
    "coverage": "vitest run --coverage",
    "deps:check": "pnpm update --interactive",
    "deps:update": "pnpm update",
    "deps:verify": "pnpm validate",
    "format": "prettier --ignore-path .prettierignore --list-different --write .",
    "lint": "eslint --fix .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "validate": "pnpm lint && pnpm format && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-consistent-comments": "^1.4.4",
    "eslint-plugin-sonarjs": "^3.0.6",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.18"
  }
}
