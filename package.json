{
  "name": "node-package-template",
  "version": "1.0.0",
  "description": "Template for creating a Node.js package.",
  "keywords": [
    "template",
    "node",
    "typescript",
    "unbuild",
    "vitest",
    "eslint",
    "prettier"
  ],
  "homepage": "https://github.com/JohnMostlyR/node-package-template",
  "bugs": {
    "url": "https://github.com/JohnMostlyR/node-package-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnMostlyR/node-package-template.git"
  },
  "license": "MIT",
  "author": "Johan Meester",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "clean": "git clean -xdf .cache dist node_modules",
    "coverage": "vitest run --coverage",
    "deps:check": "pnpm update --interactive",
    "deps:verify": "pnpm lint && pnpm typecheck && pnpm test",
    "format": "prettier --ignore-path .prettierignore --list-different --write .",
    "lint": "eslint --fix .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.1",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@types/node": "24.10.6",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "9.39.2",
    "eslint-plugin-consistent-comments": "1.4.3",
    "eslint-plugin-sonarjs": "3.0.5",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.52.0",
    "unbuild": "3.6.1",
    "vitest": "4.0.16"
  }
}
